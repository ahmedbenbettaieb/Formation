    <div class="form-group">
        <button style="width: 100px;float: right" class="btn btn-dark btn-lg btn-block"><i style="font-size: 24px" class="fa fa-trash" aria-hidden="true"></i></button>
        <p style="clear: both"></p>
    </div>
</form>
