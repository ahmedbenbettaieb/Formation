{% extends 'base.html.twig' %}

{% block body %}
<br>
<br>
    <h4>Modifier Profil</h4>

    {{ form_start(form) }}
        <div class="col-md-6 form-group">
        {{ form_row(form.nom, {'attr':{'class':"form-control"}}) }}
        </div>
        <div class="col-md-6 form-group">
        {{ form_row(form.prenom, {'attr':{'class':"form-control"}}) }}
        </div>
        <div class="col-md-6 form-group">
        {{ form_row(form.dateNaissance) }}
        </div>

        <div class="col-md-6 form-group">
        {{ form_row(form.sexe, {'attr':{'class':"form-control"}}) }}
        </div>
        <div class="col-md-6 form-group">
        {{ form_row(form.email, {'attr':{'class':"form-control"}}) }}
        </div>
        <div class="col-md-6 form-group">
        {{ form_row(form.password, {'attr':{'class':"form-control"}}) }}
        </div>
        <div class="col-md-6 form-group">
        {{ form_row(form.biography, {'attr':{'class':"form-control"}}) }}
        </div>
        <br>
        <div class="col-md-6 form-group">
        {{ form_row(form.photoProfil, {'attr':{'class':"form-control"}}) }}
        </div>
        <br>
        <button class="get-started-btn">{{ button_label|default('Modifier') }}</button>
    {{ form_end(form) }}
    <br>
{% endblock %}
