{% extends 'admin.html.twig' %}



{% block body %}
    <br>
    <a href="/user/new"><button class="btn w-btn wantToWork-btn">Ajouter Admin</button></a>
    <a href="/demandes/formateurs"><button class="btn w-btn wantToWork-btn">Demandes Formateurs</button></a>
    <br>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateNaissance</th>
                <th>Sexe</th>
                <th>Email</th>
                <th>Role</th>
                <th>Login</th>
                <th>Password</th>
                <th>Status</th>
                <th>PhotoProfil</th>
                <th>CurriculumVitae</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.photoProfil }}</td>
                
                <td>{{ user.curriculumVitae }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><font color="blue">Consulter</font></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        {{knp_pagination_render(users) }}
        </tbody>
    </table>
{% endblock %}


